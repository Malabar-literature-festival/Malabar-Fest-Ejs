<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <meta name="description" content="<%= metaTags[0].description %>" />
  <meta name="keywords" content="<%= metaTags[1].keywords %>" />
  <meta name="author" content="<%= metaTags[2].author %>" />
  <meta name="robots" content="<%= metaTags[3].robots %>" />
  <link rel="shortcut icon" type="image/x-icon" href="/assets/images/favnew.svg" />
  <%- include('layout/header.ejs') %>

    <style>
      /* Define the animation styles */
      @keyframes fadeInLeft {
        from {
          opacity: 0;
          transform: translateX(-100%);
        }

        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeInRight {
        from {
          opacity: 0;
          transform: translateX(100%);
        }

        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeInTop {
        from {
          opacity: 0;
          transform: translateY(-100%);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInBottom {
        from {
          opacity: 0;
          transform: translateY(100%);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Apply the animation to the image elements */
      .fade-in-left {
        animation: fadeInLeft 4s;
      }

      .fade-in-right {
        animation: fadeInRight 4s;
      }

      .fade-in-top {
        animation: fadeInTop 4s
      }

      .fade-in-bottom {
        animation: fadeInBottom 4s;
      }
    </style>
</head>

<body>
  <div class="main-wrapper">
    <div class="container">
      <div class="attende-registration" style="margin-top: 100px; padding-bottom: 100px;">
        <div class="registration-title">
          <h1>Sessions</h1>
        </div>

        <div id="imageContainer">
          <!-- Download button -->
          <button onclick="printScreen()" id="printButton">Print Screen</button>

          <!-- Image elements with animations -->
          <div style="margin-top: 5px" class="fade-in-left">
            <img src="/assets/images/SessionPage1.svg" alt="PDF Document 1" class="img-one" />
          </div>
          <div style="margin-top: 5px" class="fade-in-right">
            <img src="/assets/images/SessionPage2.svg" alt="PDF Document 2" class="img-two" />
          </div>
          <div style="margin-top: 5px" class="fade-in-top">
            <img src="/assets/images/SessionPage3.svg" alt="PDF Document 3" class="img-three" />
          </div>
          <div style="margin-top: 5px" class="fade-in-bottom">
            <img src="/assets/images/SessionPage4.svg" alt="PDF Document 4" class="img-four" />
          </div>
        </div>

        <script>
          // Function to check if an element is in the viewport
          function isElementInViewport(el) {
            const rect = el.getBoundingClientRect();
            return (
              rect.top >= 0 &&
              rect.left >= 0 &&
              rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
              rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
          }

          // Function to handle scroll events
          function handleScroll() {
            const elements = document.querySelectorAll("#imageContainer .fade-in-left, #imageContainer .fade-in-right, #imageContainer .fade-in-top, #imageContainer .fade-in-bottom");

            elements.forEach((element) => {
              if (isElementInViewport(element)) {
                if (!element.classList.contains("animated")) {
                  element.classList.add("animated");
                }
              } else {
                element.classList.remove("animated");
              }
            });
          }

          // Attach the scroll event listener
          window.addEventListener("scroll", handleScroll);

          // Initially trigger the handleScroll to check elements in the viewport
          handleScroll();

          // Function to print the screen
          function printScreen() {
            window.print();
            // Hide the button after printing
            document.getElementById("printButton").style.display = "none";
          }
        </script>
      </div>
    </div>
  </div>

  <!-- Footer Start -->
  <%- include('layout/footer.ejs') %>
    <!-- Footer End -->
</body>

</html>